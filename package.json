{
  "name": "age-calculator-app-main",
  "version": "1.0.0",
  "description": "![Design preview for the Age calculator app coding challenge](./design/desktop-preview.jpg)",
  "main": "index.js",
  "scripts": {
    "copy:html": "copyfiles -u 1 ./src/*.html dist",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* dist",
    "copy:js": "copyfiles -u 1 ./src/*.js dist",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"./src/assets/**/*\" -- npm run copy:assets",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:tailwind": "npx tailwindcss -i \"./src/input.css\" -o \"./dist/output.css\" --watch",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server \"dist\" --files \"dist\" ",
    "start": "npm-run-all copy --parallel watch serve"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "tailwindcss": "^3.3.6"
  }
}
